{
  "name": "electron-msix-example",
  "version": "1.0.0",
  "description": "An example Electron application using msix packaging",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --dir",
    "package-msi": "electron-builder",
    "create-msix-sparse": "windows-sdk tool makeappx.exe pack /o /d \"./msix-sparse-assets\" /nv /p \"./dist/SparseExample.msix\"",
    "build-addon": "node-gyp clean configure build --directory=native",
    "copy-msix-assets": "powershell -Command \"if (Test-Path 'msix-full') { Copy-Item -Path 'msix-full\\*' -Destination 'dist\\win-unpacked' -Recurse -Force; Write-Host 'Copied msix-full contents to dist\\win-unpacked' } else { Write-Host 'msix-full folder not found' }\"",
    "generate-dev-cert": "winsdk msix cert generate --publisher \"CN=Metulev\" --output .\\dev-cert.pfx",
    "create-msix-package": "winsdk msix package dist\\win-unpacked dist --install-cert --cert .\\dev-cert.pfx"
  },
  "build": {
    "win": {
      "target": "msi",
      "icon": "assets/icon.png"
    },
    "msi": {
      "warningsAsErrors": false,
      "additionalWixArgs": [
        "-sice:ICE61"
      ]
    },
    "protocols": [
      {
        "name": "MyApp protocol",
        "schemes": [
          "sparse-example"
        ]
      }
    ]
  },
  "keywords": [],
  "author": "Metulev",
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "nan": "^2.22.2",
    "node-addon-api": "^8.4.0",
    "node-gyp": "^11.2.0"
  }
}
