{
  "name": "electron-msix-example",
  "version": "1.0.0",
  "description": "An example Electron application using msix packaging",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --dir",
    "package-msi": "electron-builder",
    "create-msix": "npx build & winsdk package ./dist/win-unpacked/ --output-folder ./dist",
    "build-addon": "winsdk restore & node-gyp clean configure build --directory=native",
    "setup-debug": "npx winsdk nodejs add-electron-debug-identity"
  },
  "build": {
    "extraFiles": [
      "appxmanifest.xml",
      "Assets/"
    ],
    "win": {
      "target": "msi",
      "icon": "assets/icon.png"
    },
    "msi": {
      "warningsAsErrors": false,
      "additionalWixArgs": [
        "-sice:ICE61"
      ]
    },
    "protocols": [
      {
        "name": "MyApp protocol",
        "schemes": [
          "sparse-example"
        ]
      }
    ]
  },
  "keywords": [],
  "author": "Metulev",
  "license": "ISC",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "nan": "^2.23.0",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^11.4.2",
    "@electron/rebuild": "^4.0.1",
    "windows-sdk": "file:../src/winsdk-npm"
  },
  "overrides": {
    "app-builder-lib": {
      "@electron/rebuild": "4.0.1"
    }
  }
}
